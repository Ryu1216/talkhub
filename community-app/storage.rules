rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posts images - users can upload to their own folder
    match /posts/{userId}/{allPaths=**} {
      // Anyone authenticated can read post images
      allow read: if request.auth != null;
      
      // Only the user can upload to their own folder
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && validateImageFile();
    }
    
    // Profile images - users can upload to their own folder
    match /profiles/{userId}/{allPaths=**} {
      // Anyone authenticated can read profile images
      allow read: if request.auth != null;
      
      // Only the user can upload to their own folder
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && validateImageFile();
    }
    
    // Validation functions
    function validateImageFile() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}